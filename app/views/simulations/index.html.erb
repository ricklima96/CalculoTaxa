<h1>Simulador de Taxa de Factoring</h1>

<%= form_for @simulation do |form| %>

<% if @simulation.errors.any? %>
<h2>Errors:</h2>
<ul>
  <% @simulation.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<p>
  <%= form.label "Seu nome"  %>
  <%= form.text_field :nome  %>
</p>
<p>
  <%= form.label "Email" %>
  <%= form.text_area :email  %>
</p>
<p>
  <%= form.label "Empresa" %>
  <%= form.text_area :nomeEmpresa  %>
</p>
<p>
  <%= form.label "Faturamento Mensal"  %>
  <%= form.text_area :faturamentoMensal  %>
</p>
<p>
  <%= form.label "Valor do Título"  %>
  <%= form.text_area :valorTitulo  %>
</p>
<p>
  <%= form.label "Prazo do Título (dias)"  %>
  <%= form.text_area :prazoTitulo  %>
</p>
<p>
  <%= form.submit "Simular" %>
</p>
<% end %>
